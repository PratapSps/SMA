from tkinter import *
from tkinter import ttk



root = Tk()

notebook = ttk.Notebook(root)
notebook.pack(fill=BOTH, expand=True)

frame1 = Frame(notebook)
notebook.add(frame1, text='Mode A')

canvas = Canvas(frame1,background='white')
w = Label(canvas, image="", bg="white", fg="white")
w.place(x = 500, y = 240)
w1 = Label(canvas, text="SMA", bg="white", fg="black",font=('Tempus Sans ITC', 120, 'bold'))
w1.place(x = 700, y = 200)
scroll = Scrollbar(frame1, command=canvas.yview,orient='vertical')
xscroll = Scrollbar(frame1, command=canvas.xview,orient='horizontal')
canvas.config(yscrollcommand=scroll.set, scrollregion=(0,0,100,1000))
canvas.config(xscrollcommand=xscroll.set, scrollregion=(0,0,100,1000))
canvas.pack(side=LEFT, fill=BOTH, expand=True)
scroll.pack(side=RIGHT, fill=Y)
xscroll.pack(side=BOTTOM, fill=X)

frame = Frame(canvas, bg='white')
# canvas.create_window(100, 500, window=frame)

root.mainloop()