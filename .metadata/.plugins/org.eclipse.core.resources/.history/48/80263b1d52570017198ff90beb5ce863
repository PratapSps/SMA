from tkinter import *
from tkinter import ttk

root = Tk()

notebook = ttk.Notebook(root)
notebook.pack(fill=BOTH, expand=True)
notebook.pressed_index = None
container = Frame(notebook)

container.pack(fill=BOTH, expand=True)
notebook.add(container, text='Mode A')

canvas = Canvas(container,bg='green')
yscroll = Scrollbar(container, command=canvas.yview)
xscroll = Scrollbar(container, command=canvas.xview)

canvas.config(yscrollcommand=yscroll.set,scrollregion=(0,0,100,1000))
canvas.config(xscrollcommand=xscroll.set,scrollregion=(0,0,100,2000))
canvas.pack(side=LEFT, fill=BOTH, expand=True)

yscroll.pack(side=RIGHT, fill=Y)
xscroll.pack(side=BOTTOM, fill=X)


frame = Frame(canvas, background='white',)
w1 = Label(frame, text="SMA", bg="red", fg="black",font=('Tempus Sans ITC', 120, 'bold'))
w1.place(x = 10, y = 20)

canvas.create_window(0,0, anchor =NW, window = frame, width = 2000, height = 900)

root.mainloop()