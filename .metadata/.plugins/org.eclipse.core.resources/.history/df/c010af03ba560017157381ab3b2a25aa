from tkinter import *
from tkinter import ttk

root = Tk()
notebook = ttk.Notebook(root)
notebook.grid(row=0,column=0,sticky=N+E+W+S)
frame1 = Frame(notebook)
notebook.add(frame1, text='Mode A')




canvas = Canvas(frame1,background='white')
canvas.grid(row=0, column=0, sticky=N+S+E+W)
w = Label(canvas, image="", bg="white", fg="white")
w.place(x = 500, y = 240)
w1 = Label(canvas, text="SMA", bg="white", fg="black",font=('Tempus Sans ITC', 120, 'bold'))
w1.place(x = 700, y = 200)
yscroll = Scrollbar(frame1, command=canvas.yview)
xscroll=Scrollbar(frame1,command=canvas.xview)
canvas.config(yscrollcommand=yscroll.set, xscrollcommand=xscroll.set,scrollregion=(0,0,100,1000))
# make the canvas expandable
# root.grid_rowconfigure(0, weight=1)
# root.grid_columnconfigure(0, weight=1)
canvas.pack(side=LEFT, fill=BOTH, expand=True)
yscroll.pack(side=RIGHT, fill=Y)
xscroll.pack(side=RIGHT, fill=Y)
# create canvas contents
frame = Frame(canvas)
canvas.config(scrollregion=canvas.bbox("all"))


def set(self, lo, hi):
        if float(lo) <= 0.0 and float(hi) >= 1.0:
            # grid_remove is currently missing from Tkinter!
            self.tk.call("grid", "remove", self)
        else:
            self.grid()
        Scrollbar.set(self, lo, hi)

root.mainloop()